{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "commonJS",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@styles/*": ["./styles/*"],
      "@lib/*": ["./src/lib/*"],
      "@config/*": ["./src/config/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@api/*": ["./src/lib/api/*"],
      "@contexts/*": ["./src/contexts/*"],
      "@utils/*": ["./src/utils/*"],
      "@constants/*": ["./src/constants/*"]
    }
  },
  "exclude": ["node_modules"]
}
